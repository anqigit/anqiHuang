<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.Login"
    android:orientation="vertical"
    >

   <ImageView
       android:layout_alignParentTop="true"
       android:layout_width="match_parent"
      android:layout_height="600px"
       android:src="@mipmap/logo"
       android:id="@+id/ima"
       />
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:layout_below="@id/ima"
         android:id="@+id/ed_1"
         >

     <EditText
         android:id="@+id/text_sj"
         android:layout_width="900px"
         android:layout_marginTop="50px"
         android:layout_height="wrap_content"
         android:hint="请输入手机号码"
         android:gravity="center"
         android:textSize="16dp"

         />
         <ImageView
             android:layout_width="100px"
             android:layout_height="90px"
             android:src="@mipmap/sj"
             android:layout_marginTop="50px"
             />
     </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ed_1"
        android:layout_centerInParent="true"
        android:id="@+id/dxyz"

        >
        <ImageView
            android:layout_width="100px"
            android:layout_height="90px"
            android:src="@mipmap/yanzhengma"
            />
        <EditText
            android:id="@+id/text_dx"
            android:layout_width="900px"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:gravity="center"
            android:textSize="16dp"
            />
       <ImageView
           android:id="@+id/dx"
           android:layout_width="200px"
           android:layout_height="80px"
           android:src="@mipmap/yz"
            android:layout_marginLeft="690px"
           android:layout_marginTop="20px"
           />
        <ImageView
            android:id="@+id/daojishi"
            android:layout_width="200px"
            android:layout_height="80px"
            android:src="@mipmap/daijishi"
            android:layout_marginLeft="690px"
            android:layout_marginTop="20px"
            />
        <TextView
             android:layout_marginLeft="740px"
            android:layout_marginTop="35px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30S"
            android:textSize="32px"
            android:id="@+id/s"
            />
        <ImageView
            android:id="@+id/cx"
            android:layout_width="200px"
            android:layout_height="80px"
            android:src="@mipmap/cx"
            android:layout_marginLeft="690px"
            android:layout_marginTop="20px"
            />
    </RelativeLayout>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/ed_1"
       android:id="@+id/mima"
       android:layout_centerInParent="true"
       >
       <EditText
           android:id="@+id/text_mm"
           android:layout_width="900px"
           android:layout_height="wrap_content"
           android:hint="请输入密码"
           android:gravity="center"
           android:textSize="16dp"
           />

   </RelativeLayout>
    <ImageView
        android:id="@+id/DL"
        android:layout_width="600px"
        android:layout_height="200px"
        android:src="@mipmap/dl"
        android:layout_below="@id/ed_1"

        android:layout_centerInParent="true"
        android:layout_marginTop="100px"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cg"
        android:text="使用常规登录方式"
     android:layout_below="@+id/DL"
        android:layout_centerInParent="true"
        android:textColor="#ffd700"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yz"
        android:text="使用短信验证登录方式"
        android:layout_below="@+id/DL"
        android:layout_centerInParent="true"
        android:textColor="#ffd700"
        />
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_centerInParent="true"
       >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="其他登录方式"
               android:layout_marginBottom="50px"
               android:layout_centerHorizontal="true"
               android:id="@+id/qt"
               />
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/qt"
                  android:layout_centerHorizontal="true"
                  android:layout_marginBottom="50px"
                  >
                  <ImageView
                      android:layout_width="150px"
                      android:layout_height="150px"
                      android:src="@mipmap/weix"
                      android:id="@+id/wx"
                   android:layout_marginRight="20px"
                      />
                  <ImageView
                      android:id="@+id/qq"
                      android:layout_width="150px"
                      android:layout_height="150px"
                      android:src="@mipmap/qq"
                   android:layout_marginLeft="20px"
                      />
              </LinearLayout>
   </RelativeLayout>

</RelativeLayout>